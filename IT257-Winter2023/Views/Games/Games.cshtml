@using IT257_Winter2023.Models.Ratings;
@model GameModel
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Games</title>

</head>
<body>
    <table>
        <tr><th>Id:</th><td>@Model.Id</td></tr>
        <tr><th>Name:</th><td>@Model.Name</td></tr>
        <tr><th>ReleaseDate:</th><td>@Model.ReleaseDate</td></tr>
        <tr><th>Genre:</th><td>@Model.Genre.GenreName</td></tr>
        <tr><th>Console:</th><td>@Model.Console.ConsoleName</td></tr>
        <tr><th>Description:</th><td>@Model.Description</td></tr>
        @foreach (Rating key in Model.Ratings) {
        <tr><th>@key :</th><td>@key.Provider.ProviderName</td></tr>
        <tr><th>@key :</th><td>@key.RatingValue</td></tr>
        }
    </table>
</body>
</html>